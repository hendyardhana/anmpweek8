<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.example.todoappkpc.view.TodoListFragment"
        android:label="fragment_todo_list"
        tools:layout="@layout/fragment_todo_list" >
        <action
            android:id="@+id/actionCreateTodo"
            app:destination="@id/createTodoFragment" />
        <action
            android:id="@+id/actionEditTodoFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/createTodoFragment"
        android:name="com.example.todoappkpc.view.CreateTodoFragment"
        android:label="fragment_create_todo"
        tools:layout="@layout/fragment_create_todo" />
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.todoappkpc.view.EditFragment"
        android:label="EditFragment" >
        <argument
            android:name="uuid"
            app:argType="integer" />
    </fragment>
</navigation>